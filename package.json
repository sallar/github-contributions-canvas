{
  "version": "0.5.0",
  "license": "MIT",
  "description": "A tool for drawing a heat-map of Github contributions on HTML Canvas",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist",
    "src"
  ],
  "engines": {
    "node": ">=10"
  },
  "scripts": {
    "start": "tsdx watch",
    "build": "tsdx build",
    "test": "tsdx test",
    "lint": "tsdx lint",
    "prepare": "tsdx build",
    "size": "size-limit",
    "analyze": "size-limit --why"
  },
  "peerDependencies": {},
  "husky": {
    "hooks": {
      "pre-commit": "tsdx lint"
    }
  },
  "prettier": {
    "printWidth": 80,
    "semi": true,
    "singleQuote": false,
    "trailingComma": "none"
  },
  "name": "github-contributions-canvas",
  "author": "Sallar Kaboli",
  "module": "dist/github-contributions-canvas.esm.js",
  "size-limit": [
    {
      "path": "dist/github-contributions-canvas.cjs.production.min.js",
      "limit": "10 KB"
    },
    {
      "path": "dist/github-contributions-canvas.esm.js",
      "limit": "10 KB"
    }
  ],
  "devDependencies": {
    "@size-limit/preset-small-lib": "^4.9.2",
    "canvas": "^2.6.1",
    "husky": "^5.1.0",
    "size-limit": "^4.9.2",
    "tsdx": "^0.14.1",
    "tslib": "^2.1.0",
    "typescript": "^4.1.5"
  },
  "dependencies": {
    "date-fns": "^2.17.0"
  }
}
